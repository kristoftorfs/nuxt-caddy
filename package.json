{
  "name": "nuxt-caddy",
  "version": "0.0.1",
  "description": "Automatic HTTPS for local development through Caddy",
  "repository": "kristoftorfs/nuxt-caddy",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:preinstall": "esbuild src/scripts/preinstall.js --bundle --platform=node --format=esm --outfile=scripts/preinstall.js --external:node:* --banner:js='#!/usr/bin/env node' --minify --tree-shaking=true && chmod +x scripts/preinstall.js",
    "preinstall": "scripts/preinstall.js",
    "prepack": "nuxt-module-build build",
    "dev": "pnpm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "lint": "eslint . && pnpm run test:types",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^4.0.3",
    "chalk": "^5.5.0",
    "consola": "^3.4.2",
    "lodash": "^4.17.21",
    "terminal-link": "^4.0.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/eslint-config": "^1.8.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.0.3",
    "@nuxt/test-utils": "^3.19.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "latest",
    "@types/semver": "^7.7.0",
    "changelogen": "^0.6.2",
    "eslint": "^9.32.0",
    "nuxt": "^4.0.3",
    "semver": "^7.7.2",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.14.0",
    "gh": ">=2.76.2"
  },
  "packageManager": "pnpm@10.14.0"
}
